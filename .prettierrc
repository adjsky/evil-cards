{
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "trailingComma": "none",
  "singleQuote": false,
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@trivago/prettier-plugin-sort-imports"
  ],
  "importOrder": [
    "^node:(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^@evil-cards/(.*)$",
    "^@/core/(.*)$",
    "^@/lib/(.*)$",
    "^@/components/(.*)$",
    "^@/assets/(.*)$",
    "^[./]",
    "<THIRD_PARTY_TS_TYPES>",
    "<TS_TYPES>"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderCaseInsensitive": true
}
